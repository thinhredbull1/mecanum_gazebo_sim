<launch>
  <!-- Arguments -->
  <arg name="map_file" default="/home/thinh/nexus_4wd_mecanum_simulator/src/nexus_4wd_mecanum_gazebo/map/map_now.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Turtlebot3 -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <!-- <include file="$(find nexus_4wd_mecanum_gazebo)/launch/amcl.launch"/> -->
  <include file="$(find als_ros)/launch/mcl.launch"/>

  <!-- move_base -->
  <include file="$(find nexus_4wd_mecanum_gazebo)/launch/move_base.launch"/>


  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find nexus_4wd_mecanum_gazebo)/rviz/mapping.rviz"/>
  </group>
    <!-- <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d /home/thinh/Downloads/ssr.rviz"/>
  </group> -->
</launch>